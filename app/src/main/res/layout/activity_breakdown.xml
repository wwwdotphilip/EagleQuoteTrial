<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".view.BreakdownActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_accuro" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ivLogo"
        android:layout_marginTop="18dp"
        android:background="@color/app_blue2" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@color/app_blue2" />

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/vDivider"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_male" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivPhoto"
        android:layout_below="@+id/vDivider"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivPhoto"
        android:gravity="center_vertical|start"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPremiums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPhoto"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/tvPolicyFeeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/llPremiums"
        android:layout_marginTop="10dp"
        android:text="Policy Fee"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tvPolicyFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/llPremiums"
        android:layout_marginTop="10dp"
        android:text="$0.00"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tvTotalPremiumLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvPolicyFee"
        android:layout_marginTop="10dp"
        android:text="Total Premium"
        android:textColor="@color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/tvTotalPremium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvPolicyFee"
        android:layout_marginTop="10dp"
        android:text="$0.00"
        android:textColor="@color/black"
        android:textSize="19sp" />

</RelativeLayout>